<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_backgrounds_blue_green"
>

    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guestions_starting_guideline"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.50"/>
    <TextView
            android:text="@string/questions_start_page_phrase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/questions_starting_phrase_textView"
            app:layout_constraintTop_toTopOf="@+id/guestions_starting_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"

    />
    <TextView
            android:text="@string/questions_start_page_explanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/questions_starting_explanation_textView"
            android:gravity="center"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@id/start_questions_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"/>
    <ImageButton
            android:src="@drawable/ic_navigate_next_black_36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_questions_button" android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:background="@null"
            android:tint="#FFFFFF"
    />

    <!--https://stackoverflow.com/questions/22105775/imageview-in-circular-through-xml-->
    <android.support.v7.widget.CardView
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:cardCornerRadius="90dp"
            app:layout_constraintBottom_toTopOf="@+id/guestions_starting_guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:src="@drawable/emission2c"
                    />
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>